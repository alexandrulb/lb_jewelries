{
  "apiVersion": 3,
  "name": "lb_jewelry/simple-section",
  "title": "Section",
  "category": "layout",
  "icon": "index-card",
  "description": "A flexible section wrapper with padding, max-width, and background options. Allows any inner blocks.",
  "textdomain": "lb_jewelry",
  "supports": {
    "html": false,
    "spacing": {
      "padding": true,
      "margin": true
    },
    "color": {
      "background": true,
      "text": true,
      "gradients": true
    }
  },
  "attributes": {
    "contained": { "type": "boolean", "default": true },
    "maxWidth": { "type": "number", "default": 1200 },
    "align": { "type": "string", "default": "full" }
  },
  "editorScript": "file:./index.js",
  "style": "file:./style.css",
  "editorStyle": "file:./editor.css"
}
